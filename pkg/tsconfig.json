{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true
  },
  "exclude": ["dist", "public", "node_modules"]
}
